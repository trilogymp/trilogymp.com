{
  "extends": ["next/core-web-vitals", "standard", "prettier"],
  "rules": {
    "semi": ["error", "always"],
    "no-extra-semi": "error",
    "comma-dangle": [1, "only-multiline"],
    "no-warning-comments": [
      "warn",
      {
        "terms": ["eslint-disable", "fixme", "hack", "todo"],
        "location": "anywhere"
      }
    ]
  }
}
